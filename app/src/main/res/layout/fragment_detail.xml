<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@id/llMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00bfff">

            <ImageView
                android:id="@+id/ivPreviouitem"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_previous_item" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_share" />

            <ImageView
                android:id="@+id/ivDiscard"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_discard" />

            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_next_item"
                android:visibility="visible" />
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llMenu"
            android:layout_below="@+id/rlMain"
            android:padding="@dimen/dp_28">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tvDateUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="25/4/2019 1:53"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/etTitleUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28" />

                <EditText
                    android:id="@+id/etContentUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etContent"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_16">

                    <ImageView
                        android:id="@+id/ivAlarm"
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:src="@drawable/ic_action_alarms_select" />

                    <TextView
                        android:id="@+id/tvAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Alarm"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:id="@+id/llSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/spnDateday"
                            android:layout_width="@dimen/dp_64"
                            android:layout_height="@dimen/dp_64" />

                        <Spinner
                            android:id="@+id/spnHour"
                            android:layout_width="@dimen/dp_64"
                            android:layout_height="@dimen/dp_64" />

                        <Button
                            android:id="@+id/btnSaveAlarm"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/abc_ic_cab_done_holo_light" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>